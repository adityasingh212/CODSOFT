(ii) css styles :-

body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
    margin: 0;
    padding: 0;
    background-color: #f4f4f4;
}

header {
    background: #4CAF50; /* Change this to your preferred color */
    color: white;
    padding: 40px;
    text-align: center;
}

header h1 {
    margin: 0;
    font-size: 2.5em;
}

header p {
    font-size: 1.2em;
}

.cta-button {
    display: inline-block;
    background: white;
    color: #4CAF50; /* Change this to match your header */
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 5px;
    transition: background 0.3s;
}

.cta-button:hover {
    background: #ddd;
}

section {
    padding: 20px;
    margin: 20px;
    background: white;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

#features {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
}

.feature-box {
    background: #e2e2e2; /* Light grey background for feature boxes */
    padding: 15px;
    margin: 10px;
    border-radius: 5px;
    flex: 1 1 30%; /* Adjusts box sizes for responsiveness */
    max-width: 300px; /* Limit max width for better layout */
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
}

footer {
    text-align: center;
    padding: 20px;
    background: #333;
    color: white;
}

footer a {
    color: #4CAF50; /* Change link color to match theme */
    text-decoration: none;
}

footer a:hover {
    text-decoration: underline;
}

/* Responsive design */
@media (max-width: 600px) {
    #features {
        flex-direction: column; /* Stack feature boxes vertically on small screens */
    }

    .feature-box {
        max-width: 100%; /* Full width on small screens */
    }
}
